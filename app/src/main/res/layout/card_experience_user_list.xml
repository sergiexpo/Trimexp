<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_experience_user_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:id="@+id/linearLayout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/blue_1">



            <ImageView
                android:id="@+id/imageView_photoExp_user_owner"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/btn_star_big_on" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="2">


                <TextView
                    android:id="@+id/textView_titleExp_user_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="Human Tower Show"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginStart="4dp">

                    <ImageView
                        android:id="@+id/imageView_dates_user_owner"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/icon_calendar_v2"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/textView_date_user_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="jue., 24 mar 2021"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_hour_user_owner"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/icon_time"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/textView_hour_user_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="10:00h"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_iconTime_user_owner"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/icon_timer" />

                    <TextView
                        android:id="@+id/textView_duration_user_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="4 hours"
                        android:textSize="14dp"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_iconPrice_user_owner"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/icon_price" />

                    <TextView
                        android:id="@+id/textView_Price_user_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Free"
                        android:textSize="14dp"
                        android:layout_weight="2"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_location_user_owner"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        app:srcCompat="@mipmap/icon_pin_experiences" />

                    <TextView
                        android:id="@+id/textView_location_user_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="698 m"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_user_type"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Host"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>